<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<VBox class="sapUiSmallMargin">
		<f:SimpleForm 
			editable="false"
			layout="ColumnLayout"
			title="Address"
			columnsM="2"
			columnsL="3"
			columnsXL="4"
			>
			<f:content>
				<Label text="Name" />
				<Text  text=" " />
				<Label text="Street/No." />
				<Text text="{street}" />
				<Label text="ZIP Code/City" />
				<Text text="{city}" />
				<Label text="Country" />
				<Text  text="{Country}" />
				<Label text="Web" />
				<Link text="Url" href="{Url}" />
				<Label text="Twitter" />
				<Text text="{Twitter}" />
				<Label text="Email" />
				<Text text="{Email}" />
				<Label text="Tel." />
				<Text text="{Tel}" />
				<Label text="SMS" />
				<Text text="{Sms}" />
				<Label text="Mobile" />
				<Text text="{Mobile}" />
				<Label text="Pager" />
				<Text text="{Pager}" />
				<Label text="Fax" />
				<Text text="{Fax}" />
			</f:content>
		</f:SimpleForm>
	</VBox>
</core:FragmentDefinition>